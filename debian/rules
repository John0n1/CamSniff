#!/usr/bin/make -f

%:
	dh $@

override_dh_auto_install:
	$(MAKE) install DESTDIR=$(CURDIR)/debian/camsniff

override_dh_auto_clean:
	$(MAKE) clean || true

override_dh_auto_build:
	# No build step needed for shell scripts

override_dh_auto_test:
	# Basic syntax check
	bash -n camsniff.sh
	bash -n *.sh